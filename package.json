{
  "name": "@quasimatic/glance",
  "version": "0.2.8",
  "description": "Automation at a glance",
  "main": "lib/glance.js",
  "scripts": {
    "browserify": "./node_modules/.bin/browserify src/glance-selector.js -o lib/glance-selector.js -t [ babelify --presets [ es2015 ] ] -d -p [minifyify --map bundle.js.map --output bundle.js.map] && sed -i ''  '1s/^/export default function() {/' lib/glance-selector.js && echo '}' >> lib/glance-selector.js",
    "build": "babel src -d lib && npm run browserify",
    "pretest": "npm run build",
    "test": "mocha --compilers js:babel-register --recursive test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quasimatic/glance.git"
  },
  "keywords": [
    "automation",
    "webdriver",
    "selenium"
  ],
  "author": "Robots",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/quasimatic/glance/issues"
  },
  "homepage": "https://github.com/quasimatic/glance",
  "dependencies": {
    "@quasimatic/glance-selector": "0.0.7",
    "immutable": "^3.7.6",
    "install": "^0.6.1",
    "lodash": "^4.8.1",
    "loglevel": "1.4.0",
    "npm": "^3.8.5",
    "shortid": "^2.2.6",
    "webdriverio": "^4.0.5"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "es6-promise": "^3.1.2",
    "mocha": "^2.4.5",
    "pegjs": "^0.9.0",
    "browserify": "^13.0.0",
    "minifyify": "^7.3.2"
  },
  "directories": {
    "test": "test"
  }
}
